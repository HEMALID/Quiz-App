<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizy">

    <application
        android:allowBackup="true"
        android:icon="@drawable/quiz"
        android:label="@string/app_name"
        android:roundIcon="@drawable/quiz"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp"
        android:windowSoftInputMode="stateVisible|adjustResize">
        <activity
            android:name="com.example.quizy.ResultActivity"
            android:exported="false" />
        <activity
            android:name="com.example.quizy.QuizQuestionActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.quizy.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>